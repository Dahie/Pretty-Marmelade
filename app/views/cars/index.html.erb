<%= semantic_flash %>

<h1>Cars</h1>

<%= link_to 'New Car', new_car_path %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td>
          <%= link_to car.title, '', data: { filepath: url_for(car.car_skin)}, class: 'skinSelector' %>
        </td>
        <td><%= car.description %></td>
        <td></td>
        <td><%= link_to 'Show', car %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="ui three column doubling stackable grid">
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
  <div class="column">
    <div class="ui segment">Content</div>
  </div>
</div>


<canvas id="renderCanvas" touch-action="none"></canvas>

<% if !@cars.empty? %>
  <%= render 'babylon_js' %>
<% end %>