<div class="col-md-3">
  <div class="card">
    <div class="row no-gutters">
      <div class="col-md-3">
        <%= link_to '#', class: "skinSelector", data: { filepath: url_for(car.car_skin)} do %>
          <%= image_tag car.car_skin.variant(resize_to_limit: [100, 100]) %>
        <% end %>
      </div>
      <div class="col-md-9">
        <div class="card-body">
          <h5 class="card-title"><%= car.title %></h5>
          <p class="card-text"><%= car.description %></p>
          <p><%= car.user.username %></p>
        </div>
      </div>
    </div>
  </div>
</div>